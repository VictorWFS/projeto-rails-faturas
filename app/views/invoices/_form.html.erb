<%= form_with(model: invoice) do |form| %>
  <% if invoice.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
        <% invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :customer_id, "Cliente" %>
    <%= form.collection_select :customer_id, Customer.all, :id, :name, { prompt: "Selecione um Cliente" } %>
  </div>

  <div>
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date %>
  </div>

  <div>
    <%= form.label :total_amount, style: "display: block" %>
    <%= form.text_field :total_amount %>
  </div>

  <div>
    <%= form.label :status, "Status" %>
    <%= form.select :status, 
                    [
                      ['Rascunho', 'draft'], 
                      ['Enviada', 'sent'], 
                      ['Paga', 'paid']
                    ], 
                    { prompt: 'Selecione um status' } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
